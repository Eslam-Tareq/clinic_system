{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "./",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "runtime": "@vercel/node@20.x"
    }
  },
  "env": {
    "NODE_OPTIONS": "--require tsconfig-paths/register"
  }
}
